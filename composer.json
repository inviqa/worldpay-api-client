{
    "name": "inviqa/worldpay-api-client",
    "type": "library",
    "authors": [
        {
            "name": "Liviu Panainte",
            "email": "lpanainte@inviqa.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "sabre/xml": "^2.1",
        "guzzlehttp/guzzle": "^6.0"
    },
    "require-dev": {
        "phpspec/phpspec": "^6.3.0",
        "behat/behat": "^3.4",
        "webmozart/assert": "^1.3"
    },
    "scripts": {
        "spec": [
            "php bin/phpspec run --format=pretty"
        ],
        "behat": [
            "php bin/behat --colors" 
        ]
    },
    "autoload": {
        "psr-4": {
            "": [
                "features/bootstrap",
                "src"
            ]
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
